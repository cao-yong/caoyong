<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <!-- setting配置 一般配置 延迟加载和二级缓存
        本项目中因为使用了freemarker静态化页面，所以不需要 延迟加载
        又因为使用了分布式缓存，所以不使用二级缓存
    -->

    <!-- 别名 逆向工程生成的已经有别名了，所以别名可以不用配置-->
    <typeAliases>
    	<package name="com.caoyong.core.bean" />
    </typeAliases>


    <!--Mapper位置
        spring整合mybatis中已经配置了mapper的包的位置，所以这个也不用配置
    -->
</configuration>